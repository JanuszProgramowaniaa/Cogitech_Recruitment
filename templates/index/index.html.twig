{% extends 'base.html.twig' %}

{% block title %}Posty Użytkowników{% endblock %}

{% block body %}
<style>
    .post-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .post-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    header {
        background-color: #333;
        padding: 1em;
        color: white;
        text-align: center;
    }

    header a {
        color: white;
        text-decoration: none;
        margin: 0 1em;
    }
</style>

<div class="post-wrapper">
    <header class="bg-dark text-white p-4">
        <h1>Wasiak Damian - Zadanie rekrutacyjne dla Cogitech </h1>
        {% if app.user %}
            <p>Jesteś zalogowany. Możesz przeglądać posty.</p>
            <a href="{{ path('app_posts') }}" class="btn btn-primary">Przejdź do postów</a>
        {% else %}
            <p>Aby przeglądać posty, musisz posiadać być zalogowany.</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Zaloguj się</a>
            <a href="{{ path('app_register') }}" class="btn btn-success">Zarejestruj się</a>
        {% endif %}
    </header>
</div>

{% endblock %}