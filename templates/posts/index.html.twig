{% extends 'base.html.twig' %}

{% block title %}Posty{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Posty </h1>

        <div class="row">
            {% for post in posts %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h2>{{ post.title }}</h2>
                            <p>{{ post.content }}</p>
                            <p>Author: {{ post.author }}</p>
                            <p>Created at: {{ post.createdAt|date('Y-m-d H:i:s') }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}