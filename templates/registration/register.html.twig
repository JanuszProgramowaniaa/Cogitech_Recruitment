{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="mb-4">Rejestracja</h1>

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                            <div class="mb-3">
                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(registrationForm.plainPassword, {
                                    'label': 'Hasło',
                                    'attr': {'class': 'form-control', 'placeholder': 'Hasło'}
                                }) }}
                            </div>
                            <div class="mb-3 form-check">
                                {{ form_row(registrationForm.agreeTerms, {'label': 'Akceptuję regulamin', 'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>

                            <button type="submit" class="btn btn-primary">Zarejestruj się</button>
                        {{ form_end(registrationForm) }}

                        <div class="mt-3">
                            <a href="{{ path('app_index') }}" class="btn btn-secondary">Powrót</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
