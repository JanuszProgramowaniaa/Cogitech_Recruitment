{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="mb-4">Logowanie</h1>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form method="post">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Hasło</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <button class="btn btn-lg btn-primary" type="submit">Zaloguj</button>
                        </form>

                        <div class="d-flex justify-content-between mt-3">
                            <p class="mb-0">Nie posiadasz jeszcze konta? <a href="{{ path('app_register') }}">Zarejestruj się</a></p>
                            <a href="{{ path('app_index') }}" class="btn btn-secondary">Powrót</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
